<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="IMDMARKET"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="#FF5722"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O que deseja fazer?"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />


    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_cadastrar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Cadastrar Produto"
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:layout_margin="8dp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_listar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Listar Produtos"
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:layout_margin="8dp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_alterar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Alterar Produtos"
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:layout_margin="8dp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_deletar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Deletar Produtos"
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:layout_margin="8dp"
            android:textColor="#FFFFFF" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

